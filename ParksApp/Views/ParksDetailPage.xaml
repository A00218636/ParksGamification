<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ParksApp.Views.ParksDetailPage"
    xmlns:viewmodels="clr-namespace:ParksApp.ViewModels"
    xmlns:models="clr-namespace:ParksApp.Models"
    x:DataType="models:Park"
    Title="{Binding Name}">

     <!--<ContentPage.BindingContext>
        <viewmodels:ParkDetailsViewModel/>
    </ContentPage.BindingContext>-->

    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Label Text="{Binding Name}" TextColor="Chocolate" Margin="20" BackgroundColor="Aquamarine"/>
            <Label Text="{Binding Description}" TextColor="DarkCyan" Margin="20" BackgroundColor="Aquamarine"/>
            <!--<Label Text="{Binding Park.Name}" TextColor="Blue"/>
            <Label Text="{Binding Park.Description}" TextColor="Brown" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
